{
  "name": "eclipse-pdf",
  "version": "1.0.7",
  "main": "main.js",
  "description": "A modern PDF reader and editor with powerful annotation tools and customizable themes.",
  "author": {
    "name": "Alfred Xavier",
    "email": "support@eclipsepdf.com"
  },
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:store": "electron-builder --win appx"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "app-builder-bin": "^5.0.0-alpha.12",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.eclipsepdf.app",
    "productName": "Eclipse PDF",
    "artifactName": "EclipsePDF-${version}-${os}-${arch}.${ext}",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "web/**/*",
      "file-picker.html",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "web/pdf.worker.mjs"
    ],
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "Open PDF with Eclipse PDF",
        "role": "Viewer",
        "mimeType": "application/pdf"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "appx": {
      "publisher": "CN=79C2D2DE-52B5-4CF5-BF5C-95AB0864FB2F",
      "publisherDisplayName": "Alfred Xavier",
      "identityName": "AlfredXavier.EclipsePDF",
      "displayName": "Eclipse PDF",
      "backgroundColor": "#000000",
      "electronUpdaterAware": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Utility"
    }
  }
}
