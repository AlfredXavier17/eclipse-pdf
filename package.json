{
  "name": "eclipse-pdf",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A modern PDF reader and editor with powerful annotation tools and customizable themes.",
  "author": {
    "name": "Alfred Xavier",
    "email": "alfredxavierct@gmail.com"
  },
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:store": "electron-builder --win appx"
  },
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "app-builder-bin": "^5.0.0-alpha.12",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.eclipsepdf.app",
    "productName": "Eclipse PDF",
    "artifactName": "EclipsePDF-${version}-${os}-${arch}.${ext}",
    "icon": "assets/icon.ico",
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets/icon.ico",
        "to": "icon.ico"
      }
    ],
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "Open PDF with Eclipse PDF",
        "role": "Viewer",
        "mimeType": "application/pdf"
      }
    ],
    "win": {
      "target": "appx",
      "icon": "assets/icon.ico"
    },
    "appx": {
      "publisher": "CN=79C2D2DE-52B5-4CF5-BF5C-95AB0864FB2F",
      "publisherDisplayName": "Alfred Xavier",
      "identityName": "AlfredXavier.EclipsePDF",
      "displayName": "Eclipse PDF",
      "backgroundColor": "#000000",
      "electronUpdaterAware": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
