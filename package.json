{
  "name": "moonreader",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Minimal PDF reader with dark mode",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.moonreader.app",
    "productName": "MoonReader",
    "icon": "icon", 
    "fileAssociations": [
      {
        "ext": "pdf",
        "name": "PDF Document",
        "description": "Open PDF with MoonReader",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png",
      "category": "Utility"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
